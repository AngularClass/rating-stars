{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "exclude": [
    "node_modules",
    "typings/main",
    "typings/main.d.ts"
  ],
  "filesGlob": [
    "src/**/*.ts",
    "!node_modules/**/*.**",
    "!typings/main.d.ts",
    "typings/browser.d.ts"
  ],
  "files": [
    "src/index.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
